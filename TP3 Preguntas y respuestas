using namespace std;

int main() {
	int i=1;
	while(i!=0)
	{
		i=Menu();
	}
}

int Menu(){
	int opcion;
	cout<<"Que desea?\n1Historia\n2Geografia\n3Matematicas\n4Castellano\n5Ingles\n6Salir\n";
	cin>>opcion;
	switch(opcion)
	{
		case 1:
			{
				return Categoria(1);
				break;
			}
		case 2:
			{
				return Categoria(2);
				break;
			}
		case 3:
			{
				return Categoria(3);
				break;
			}
		case 4:
			{
				return Categoria(4);
				break;
			}
		case 5:
			{
				return Categoria(5);
				break;
			}
		case 6:
			{
				return 0;
				break;
			}
		default:
			{
				return Menu();
				break;
			}
	}
	cout<<"\n";
}

