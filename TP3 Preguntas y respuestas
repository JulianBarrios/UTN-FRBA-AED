bool RespuestaCorrecta(int respondido,int correcta)
{
	if(respondido==correcta)
		return true;
	else
		return false;
}

int ValidarIngresoPregunta(){
	int opcion;
	cin>>opcion;
	if(opcion>=0 && opcion<=4)
		return opcion;
	else
		return ValidarIngresoPregunta();
}
